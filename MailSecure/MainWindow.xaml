<Window x:Class="MailSecure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSecure"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Frame Name="SendEncrypt" Height="40" Content="Send" HorizontalContentAlignment="Center" MouseLeftButtonDown="SendMessage_UC" />
            <Frame Name="ReadDecrypt" Height="40" Content="Decrypt" MouseLeftButtonDown="DecryptMessage_UC" />
            <Image Name="Option" Height="40" Source="Images/OptionButton.png" MouseLeftButtonDown="Option_UC" />
        </StackPanel>
        <Grid Grid.Column="1" Name="GridContent">
        </Grid>
    </Grid>
</Window>
